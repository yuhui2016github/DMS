<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_products_browsing"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/item_catalogue_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_iv_pic"
            android:layout_width="187dp"
            android:layout_height="130dp"
            android:layout_gravity="center_horizontal"
            android:background="@android:color/white" />

        <com.example.yuhui.dms.dmscatalogue.view.CatalogueTagView
            android:id="@+id/item_catalogue_tag"
            android:layout_width="72px"
            android:layout_height="78px"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:visibility="gone" />

        <TextView
            android:id="@+id/item_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_iv_pic"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:lines="2"
            android:textColor="#4e4e4e"
            android:textSize="13sp"
            tools:text="国行Apple/苹果iwatch智能手表/国行Apple/苹果iwatch智能手表/国行Apple/苹果iwatch智能手表/国行Apple/苹果iwatch智能手表" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_price_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="¥"
                android:textColor="#f15656"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/item_tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="356"
                android:textColor="#f15656"
                android:textSize="18sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/item_cb_collection"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/catalogue_item_collection_selection"
                android:paddingBottom="13dp"
                android:paddingLeft="10dp"
                android:paddingRight="8dp" />

            <CheckBox
                android:id="@+id/item_cb_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:button="@null"
                android:drawableLeft="@drawable/catalogue_shopping_bus"
                android:gravity="center"
                android:paddingBottom="13dp"
                android:paddingLeft="8dp"
                android:paddingRight="12dp" />
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>